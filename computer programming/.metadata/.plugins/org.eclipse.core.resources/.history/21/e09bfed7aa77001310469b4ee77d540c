import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

import javax.swing.*;
public class Spectrum extends JFrame{
	Random rand = new Random();
	JPanel clock;
	int one=0;
	int two=0;
	int three=0;
	Spectrum() throws InterruptedException{
		super("Clock");
		init();
		this.setSize(600,600);
		this.setVisible(true);
		this.add(clock);
		while(true){
			one=0;
			two=0;
			three=0;
			for(int k=0;k<255;k++){
			for(int j=0;j<255;j++){
		for(int i=0;i<255;i++){
			Thread.sleep(1);
			one++;
			repaint();
		}
		for(int i=0;i<255;i++){
			Thread.sleep(1);
			one--;
			repaint();
		}
			two++;
			repaint();
			}
			for(int j=0;j<255;j++){
				for(int i=0;i<255;i++){
					Thread.sleep(1);
					one++;
					repaint();
				}
				for(int i=0;i<255;i++){
					Thread.sleep(1);
					one--;
					repaint();
				}
					two--;
					repaint();
					}
			two=0;
			three++;
			repaint();
			}
			for(int i=0;i<255;i++){
				Thread.sleep(1);
				one++;
				repaint();
			}
			for(int i=0;i<255;i++){
				Thread.sleep(1);
				one--;
				repaint();
			}
				two++;
				repaint();
				}
				for(int j=0;j<255;j++){
					for(int i=0;i<255;i++){
						Thread.sleep(1);
						one++;
						repaint();
					}
					for(int i=0;i<255;i++){
						Thread.sleep(1);
						one--;
						repaint();
					}
						two--;
						repaint();
						}
				two=0;
				three--;
				repaint();
				}
		}
		}
	
	public void init(){
		clock = new Clockpanel();
		
	}
	public static void main(String[]args) throws InterruptedException{
		Spectrum window=new Spectrum();
		window.setDefaultCloseOperation(3);
	}
	private class Clockpanel extends JPanel{
		public void paintComponent(Graphics g){
			Color Color=new Color(one,two,three);
			g.setColor(Color);
			g.fillRect(0, 0, 600, 600);
			}
	}
}
