import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.Random;

import javax.swing.*;
public class GUIgame extends JFrame implements KeyListener{
	Random rand = new Random();
	JPanel game;
	static int xplayer=250, xshot,yshot=490,xenemy[]=new int[10],yenemy[]=new int[10],c[]=new int[3];
	static boolean shot = false,winner=false, enemy[]=new boolean[10], enemyswitch=true;
	GUIgame() throws InterruptedException{
		super("GUI game");
		init();
		this.setSize(600,600);
		this.setVisible(true);
		this.add(game);
		this.addKeyListener(this);
		int r[]={1,2,0,0,2,1},
		g[]={0,0,2,1,1,2},
		b[]={2,1,1,2,0,0};
		while(true){
			for(int j=0;j<6;j++)
				for(int z=0;z<6;z++)
				for(int k=0;k<255;k++){
				Thread.sleep(10);
				if(z==0)
				c[g[j]]++;
				else if(z==1)
				c[r[j]]++;
				else if(z==2)
				c[b[j]]++;
				else if(z==3)
				c[g[j]]--;
				else if(z==4)
				c[r[j]]--;
				else if(z==5)
				c[b[j]]--;
					
			if(shot)
		yshot--;
			if(yshot<0){
				yshot=490;
				shot=false;
			}
			for(int i=0;i<10;i++){
			if(xshot>=xenemy[i]-9&&xshot<=xenemy[i]+10&&yshot==yenemy[i]){
				enemy[i]=false;
				shot=false;
			}
			}
			for(int i = 0;i<10;i++)
				if(enemy[i])
				winner=false;
				else
				winner=true;
			Thread.sleep(1);
		repaint();
		}	
		}
	}
	
	public void init(){
		game = new Gamepanel();
	}
	public static void main(String[]args) throws InterruptedException{
		for(int i=0;i<10;i++){
			yenemy[i]=100;
			xenemy[i]=(i+1)*60;
			enemy[i]=true ;
		}
		GUIgame window=new GUIgame();
		window.setDefaultCloseOperation(3);
	}
	private class Gamepanel extends JPanel{
		public void paintComponent(Graphics p){
			Font f=new Font("Times New Roman",Font.BOLD,30);
			
			
			Color Color=new Color(c[0],c[1],c[2]);
			p.setColor(Color);
			p.fillRect(0, 0, 600, 600);
			
			
			p.setColor(Color.BLUE);
			
			p.fillRect(xplayer, 500, 10, 10);
			p.setColor(Color.green);
			p.drawRect(xplayer, 500, 10, 10);
			if(shot){
				xshot=xplayer;
				p.setColor(Color.RED);
				
				p.fillRect(xshot, yshot, 10, 20);
				p.setColor(Color.blue);
				p.drawRect(xshot, yshot, 10, 10);
			}
			for(int i=0;i<10;i++){
				if(enemy[i]){
					p.setColor(Color.green);
					p.fillRect(xenemy[i], yenemy[i], 10, 10);
					p.setColor(Color.blue);
					p.drawRect(xenemy[i], yenemy[i], 10, 10);
				}
			}
			if(winner){
				p.setColor(Color.RED);
				p.setFont(f);
				p.drawString("YOU WIN!!!", 300,300);
			}
				
		}
	}
	@Override
	public void keyPressed(KeyEvent arg0) {
		if(arg0.getKeyCode()==KeyEvent.VK_LEFT){
			xplayer=xplayer-2;
		}
		if(arg0.getKeyCode()==KeyEvent.VK_RIGHT){
			xplayer=xplayer+2;
		}
		if(arg0.getKeyCode()==KeyEvent.VK_SPACE){
			yshot=490;
			shot=true;
		}
		
	}


	@Override
	public void keyReleased(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}


	@Override
	public void keyTyped(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}
}
